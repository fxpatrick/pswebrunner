@model YourNamespace.ViewModels.RunScriptViewModel

<form asp-action="RunScript" method="post">
    <div>
        <label asp-for="ScriptPath">Enter PowerShell script path:</label>
        <input asp-for="ScriptPath" class="form-control" />
        <span asp-validation-for="ScriptPath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Run PowerShell Script</button>
</form>
